{% extends "../_layouts/_adminLayout.njk" %}

{% block content %}
  <h1 class="mb-4">Blog Posts</h1>

  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Date</th>
        <th style="width:150px;">Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for post in posts %}
        <tr>
          <td>{{ post.title }}</td>
          <td>{{ post.author }}</td>
          <td>{{ post.date }}</td>
          <td>
            <a href="/admin/{{ post.slug }}/edit" class="btn btn-sm btn-outline-primary">Edit</a>
            <button class="btn btn-danger btn-sm btn-delete" data-slug="{{ post.slug }}">
              Delete
            </button>
          </td>
        </tr>
      {% else %}
        <tr><td colspan="4" class="text-center text-muted">No posts yet</td></tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}